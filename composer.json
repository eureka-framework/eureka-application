{
  "name": "eureka/eureka-appplication-web",
  "description": "Web Application Eureka Framework - Template App",
  "minimum-stability": "stable",
  "type": "project",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Application\\": "./src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Application\\Tests\\": "./tests",
      "Application\\Behat\\": "./features/bootstrap/"
    }
  },

  "require": {
    "php": "8.1.*||8.2.*",
    "ext-json": "*",
    "ext-pdo": "*",

    "erusev/parsedown": "^1.7",
    "eureka/component-console": "^5.3",
    "eureka/component-database": "^3.2",
    "eureka/component-deployer": "^2.1",
    "eureka/component-orm": "^5.4",
    "eureka/component-password": "^4.2",
    "eureka/component-validation": "^5.2",
    "eureka/component-web": "^5.3",
    "eureka/kernel-http": "^5.2",
    "eureka/kernel-console": "^5.2",
    "psr/log": "^1.1||^2.0||^3.0",
    "psr/clock": "^1.0",
    "symfony/cache": "^6.3",
    "twig/twig": "^3.6",
    "twig/markdown-extra": "^3.6"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "dg/bypass-finals": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^9.0",
    "phpunit/phpunit": "^10.2",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
